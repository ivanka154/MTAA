{
  "hosting": {
    "public": "public",
    "rewrites" : [
    {
      "source" : "/helloWorld",
      "function" : "app"
    },
    {
      "source" : "/user/login",
      "function" : "app"
    },
    {
      "source" : "/user/register",
      "function" : "app"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
